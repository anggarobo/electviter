// tell to typescript what it should do with exactly those file inside the electron directory
{
  "extends": [
    "../../config/tsconfig.base.json"
  ],
  "compilerOptions": {
    "outDir": "../../dist-main", // define where to put the generated js
    "types": [
      "../../types"
    ],
    "baseUrl": ".",
    "paths": {
      "app/*": [
        "src/*"
      ],
      "main/*": [
        "src/main/*"
      ],
      "__assets/*": [
        "assets/*"
      ],
    }
  },
}